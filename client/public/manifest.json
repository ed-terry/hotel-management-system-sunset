  "shortcuts": [
    {
      "name": "Dashboard",
      "description": "View hotel dashboard with key metrics",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/dashboard-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "New Booking",
      "description": "Create a new room booking",
      "url": "/bookings?action=new",
      "icons": [
        {
          "src": "/icons/booking-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Check Rooms",
      "description": "View room availability and status",
      "url": "/rooms",
      "icons": [
        {
          "src": "/icons/rooms-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Housekeeping",
      "description": "Manage housekeeping tasks",
      "url": "/housekeeping",
      "icons": [
        {
          "src": "/icons/housekeeping-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+hms",
      "url": "/?protocol=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.hotelmanagement.hms",
      "id": "com.hotelmanagement.hms"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/hotel-management-system/id123456789"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/csv", "application/pdf", "image/*"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "preferred"
}
